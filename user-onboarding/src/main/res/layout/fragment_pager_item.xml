<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.edsilfer.android.user_onboarding.presenter.ActivityUserOnBoarding">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dim_page_item_vertical_margin"
        android:layout_marginEnd="@dimen/dim_page_item_horizontal_margin"
        android:layout_marginLeft="@dimen/dim_page_item_horizontal_margin"
        android:layout_marginRight="@dimen/dim_page_item_horizontal_margin"
        android:layout_marginStart="@dimen/dim_page_item_horizontal_margin"
        android:adjustViewBounds="true"
        android:contentDescription="@string/str_page_item_image_description"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dim_page_item_vertical_margin"
        android:layout_marginEnd="@dimen/dim_page_item_horizontal_margin"
        android:layout_marginLeft="@dimen/dim_page_item_horizontal_margin"
        android:layout_marginRight="@dimen/dim_page_item_horizontal_margin"
        android:layout_marginStart="@dimen/dim_page_item_horizontal_margin"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/str_sample_header"
            android:textColor="@android:color/white" />

        <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="@string/str_sample_subheader"
            android:textColor="@android:color/white" />
    </LinearLayout>
</FrameLayout>